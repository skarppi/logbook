{
  "name": "opentx-logbook",
  "private": true,
  "version": "1.0.0",
  "description": "Flight logbook from OpenTX logs",
  "workspaces": [
    "client",
    "server"
  ],
  "scripts": {
    "clean": "rimraf server/dist",
    "build": "yarn run clean && yarn workspaces foreach --parallel --verbose run build",
    "prod": "NODE_ENV=production node PORT=3000 ./server/dist/server/src/server.js",
    "dev": "yarn run clean && yarn workspaces foreach --parallel --interlaced --verbose run dev"
  },
  "keywords": [
    "typescript",
    "react",
    "starter-kit",
    "webpack",
    "fullstack",
    "express",
    "express4",
    "node"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/skarppi/logbook.git"
  },
  "license": "MIT",
  "author": "Juho Kolehmainen",
  "devDependencies": {
    "concurrently": "^3.6.1",
    "rimraf": "^2.6.2"
  },
  "packageManager": "yarn@3.2.4"
}
